{
  "variables": {
    "atlas_build_slug": "{{env `ATLAS_BUILD_SLUG`}}",
    "atlas_build_configuration_version": "{{env `ATLAS_BUILD_CONFIGURATION_VERSION`}}"
  },
  "push": {
    "name": "",
    "vcs": true
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 51200,
      "hard_drive_interface": "sata",
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "c018577c75b2434fbb2c324789dee0ba887d9c32",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.kernel.org/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-DVD-1611.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "headless": true,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "script/ipv6.sh",
        "script/sshd.sh",
        "script/update.sh",
        "script/vagrant.sh",
        "script/virtualbox.sh",
        "script/cleanup.sh",
        "script/zerodisk.sh"
      ],
      "execute_command": "echo 'vagrant'|sudo -E -S bash '{{.Path}}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "{{user `atlas_build_slug`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "0.0.{{user `atlas_build_configuration_version`}}"
        }
      }
    ]
  ]
}
